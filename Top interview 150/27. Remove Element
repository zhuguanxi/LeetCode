WAY 1:
class Solution {
public:
    int removeElement(vector<int>& nums, int val) {
        int cnt = 0;
        for (int i = 0; i<nums.size();i++)
        {
            if (nums[i] != val)
            {
                nums[cnt] = nums[i];
                cnt += 1;
            }   
        }
        return cnt;
    }
};

WAY 2:
class Solution {
public:
    int removeElement(vector<int>& nums, int val) {
        int cnt = nums.size();
        for (int i = 0; i < cnt; ) 
        {
            if (nums[i] == val) 
            {
                nums[i] = nums[cnt - 1];  
                cnt--;                  
            } 
            else 
                i++; 
        }               
        return cnt;
    }
};
